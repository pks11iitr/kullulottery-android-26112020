                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="1dp"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:textColor="@color/green"
                    android:textColorHint="@color/white"
                    android:textSize="10sp" />
